<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/icon/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="color-background">
    <div class="d-flex flex-column min-vh-100 image-background-repeat">
        <header>
            <nav class="navbar navbar-expand-md navbar-dark color-secundary border-white border-bottom">
                <!-- Brand -->
                <a class="navbar-brand mx-5" href="#"></a>

                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item px-3">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">
                                <i class="bi bi-house"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-light" asp-area="" asp-page="/Projetos">
                                <i class="bi bi-card-heading"></i>
                                Projetos
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        
        <main role="main" id="main">
            <div class="container">
                <div class="row">
                    <div class="col-lg">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>

        <footer class="mt-auto d-flex flex-wrap justify-content-between align-items-center py-3 border-top color-secundary">
            <div class="col-md-4 d-flex align-items-center">
                <span class="text-muted">© 2022 Guilherme Camargo Bley</span>
            </div>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="px-2">
                    <a class="text-muted" href="https://github.com/GuilhermeBley" target="_blank">
                        <i class="bi bi-github" style="font-size: 25px"></i>
                    </a>
                </li>
                <li class="px-2">
                    <a class="text-muted" href="https://stackoverflow.com/users/16439096/guilherme-bley" target="_blank">
                        <i class="bi bi-stack-overflow" style="font-size: 25px"></i>
                    </a>
                </li>
                <li class="px-2">
                    <a class="text-muted" href="https://www.linkedin.com/in/guilhermebley/" target="_blank">
                        <i class="bi bi-linkedin" style="font-size: 25px"></i>
                    </a>
                </li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
